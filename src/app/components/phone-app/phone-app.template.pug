.row
  .col-lg-12
    h1.page-header {{ phone.name }}

.row
  .col-md-5(*ngIf="phone.images.length")
    img.img-responsive([src]="'assets/' + phone.images[0]", alt="")
  .col-md-7
    p {{ phone.description }}
  .col-md-7
    .row
      .col-md-6
        h3 Battery
        h4 Type
        | {{ phone.battery.type }}
        h4 Talk Time
        | {{ phone.battery.talkTime }}
        h4 Standby time (max)
        | {{ phone.battery.standbyTime }}
      .col-md-6
        h3 Technical specs
        h4 RAM
        | {{ phone.storage.ram }}
        h4 Internal Storage
        | {{ phone.storage.flash }}
        h4 CPU
        | {{ phone.hardware.cpu }}

.row
  .col-lg-12
    h3.page-header Additional images

  .col-sm-3.col-xs-6(*ngFor="let image of phone.images")
    img.img-responsive.img-related([src]="'assets/' + image", alt="")

